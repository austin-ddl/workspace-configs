#!/bin/bash

mkdir /home/ubuntu/.local/share/code-server/User
echo '{"telemetry.enableTelemetry": false}' >> /home/ubuntu/.local/share/code-server/User/settings.json

code-server ${DOMINO_WORKING_DIR} --user-data-dir ${DOMINO_WORKING_DIR}/vscode-settings --auth none --port ${1:-8888} --extensions-dir ${HOME}/.local/share/code-server/extensions
