#!/bin/bash
set -o nounset -o errexit -o pipefail


#install code-server  
cd /opt && \
  mkdir /opt/code-server && \
  cd /opt/code-server && \
  wget -qO- https://github.com/cdr/code-server/releases/download/2.1692-vsc1.39.2/code-server2.1692-vsc1.39.2-alpine-x86_64.tar.gz | tar zxvf - --strip-components=1



#install the python extension for vs-code
wget -P /home/ubuntu/.local/share/code-server/extensions/ https://github.com/microsoft/vscode-python/releases/download/2019.11.50794/ms-python-release.vsix



chown -R ubuntu:ubuntu /home/ubuntu/.local/share/code-server/


export PATH=/opt/code-server:$PATH

echo 'export PATH=/opt/code-server:$PATH' >> /home/ubuntu/.domino-defaults

rm -rf /var/lib/apt/lists/*
